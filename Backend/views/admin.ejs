<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">

    <title>Admin Page</title>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

    <script>
        function create() {
            var officer = {
                username: $('#username').val(),
                password: $('#password').val(),
                position: $('#position').val()
            }
            $.post('/admin/createOfficer', officer, (res, status) => {
                if (status === "success") {
                    window.location.reload();
                }
            })
        }
    </script>
    <style>
        a {
            color: #555
        }
        a:hover {
            color: black
        }
    </style>
</head>

<body style="height:100vh">
    <div class="d-flex flex-row">
        <nav class="nav navbar navbar-light bg-light flex-column" style="height:100vh;width: 250px;justify-content: start;align-items: flex-start;">
            <a class="navbar-brand mx-auto mt-2">
                Chiang Mai Bank
            </a>
            <hr style="height:1px;width:90%;;background: black" class="mx-auto">
        </nav>
        <div class="container h-100">
            <h2 class="text-left mt-3">ADMIN PANEL</h2>
            <hr style="height:1px;width:100%;;background:black">
            <h4 class="text-left"> List Officer</h4>
            <hr style="height:1px;width:100%;;background:black">
            <form action="#" method="GET" onsubmit="create()">
                <div class="form-row">
                    <div class="col-6 row">
                        <div class="col-3">
                            <label class="mt-2 ml-4" for="username">Username</label>
                        </div>
                        <div class="col-9">
                            <input type="text" class="form-control mt-auto" style="width:200px;" id="username" placeholder="username" required>
                        </div>
                    </div>
                    <div class="col-6 row">
                        <div class="col-3">
                            <label class="mt-2 ml-4" for="password">Password</label>
                        </div>
                        <div class="col-9">
                            <input type="password" class="form-control mt-auto" style="width:200px;" id="password" placeholder="password" required>
                        </div>
                    </div>
                </div>
                <div class="form-row mt-3">
                    <div class="col-6 row">
                        <div class="col-3">
                            <label class="mt-2 ml-4">Position</label>
                        </div>
                        <div class="col-auto">
                            <select class="form-control" id="position" style="width: 200px" required>
                                <option value="0">CRM</option>
                                <option value="1">DEPT</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-6 row">
                        <div class="col-3"></div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-outline-secondary" onclick="()=>{}">CREATE</button>
                        </div>
                    </div>
                </div>
            </form>
            <hr style="height:1px;width:100%;background:black">
            <div class="container">
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Username</th>
                            <th scope="col">Fullname</th>
                            <th scope="col">Position</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i = 0; i < officers.length; i++) { %>
                            <tr>
                                <td><%= officers[i].id %></td>
                                <td><%= officers[i].username %></td>
                                <td><%= officers[i].name %></td>
                                <td><%= officers[i].position %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-end">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        
    </div>
</body>

</html>