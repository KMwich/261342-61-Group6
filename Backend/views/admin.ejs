<body style="height:100vh">
    <div class="d-flex flex-row">
        <nav class="nav navbar navbar-light bg-light flex-column" style="height:100vh;width: 250px;justify-content: start;align-items: flex-start;">
            <a class="navbar-brand mx-auto mt-2">
                Chiang Mai Bank
            </a>
            <hr style="height:1px;width:90%;;background: black" class="mx-auto">
        </nav>
        <div class="container h-100">
            <h2 class="text-left ml-4 mt-3">ADMIN PANEL</h2>
            <hr style="height:1px;width:95%;;background:black" class="ml-4">
            <h4 class="text-left ml-4"> List Officer</h4>
            <hr style="height:1px;width:95%;;background:black" class="ml-4">
            <form>
                <div class="form-row">
                    <div class="col-6 row">
                        <div class="col-3">
                            <label class="mt-2 ml-4" for="username">Username</label>
                        </div>
                        <div class="col-9">
                            <input type="text" class="form-control mt-auto" style="width:200px;" id="username" placeholder="username" required>
                        </div>
                    </div>
                    <div class="col-6 row">
                        <div class="col-3">
                            <label class="mt-2 ml-4" for="password">Password</label>
                        </div>
                        <div class="col-9">
                            <input type="password" class="form-control mt-auto" style="width:200px;" id="password" placeholder="password" required>
                        </div>
                    </div>
                </div>
            </form>
            <form>
                <div class="form-row mt-3">
                    <div class="col-6 row">
                        <div class="col-3">
                            <label class="mt-2 ml-4">Position</label>
                        </div>
                        <div class="col-auto">
                            <div class="btn-group">
                                <button type="button" class="btn btn-secondary" style="width:170px;">Select</button>
                                <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" id="dropdownMenuReference" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-reference="parent">
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuReference">
                                    <a class="dropdown-item" href="#">Action</a>
                                    <a class="dropdown-item" href="#">Another action</a>
                                    <a class="dropdown-item" href="#">Something else here</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 row">
                        <div class="col-3"></div>
                        <div class="col-auto">
                            <button type="button" class="btn btn-outline-secondary">CREATE</button>
                        </div>
                    </div>
                </div>
            </form>
            <hr style="height:1px;width:95%;;background:black" class="ml-4">
        </div>
        
    </div>
